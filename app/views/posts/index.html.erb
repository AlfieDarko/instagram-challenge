<h5>
  Winstagram Feed</h5>
<br>
<% @posts.each do |post| %>
  <div class="ui centered two cards">
    <div class="ui  card">
      <div class="content">
        <div class="right floated meta">14h</div>
        <img class="ui avatar image" src="/images/avatar/large/elliot.jpg">
        **insert username of post**
      </div>
      <div class="image">
        <%= image_tag post.image.url(:medium) %>
      </div>
      <div class=" content">

        <%= post.caption %>
      </div>

      <div class="content">
        <span class="right floated">
          <i class="heart outline like icon"></i>
          17 likes
        </span>
        <i class="comment icon"></i>
        <%= post.comments.count %>
        comments
      </div>
      <div class="extra content">
        <div class="ui large transparent left icon input">
          <i class="heart outline icon"></i>
        </div>
      </div>
    </div>

  </div>
  <%= link_to "Add Comments", new_post_comment_path(:post_id => post.id, :user_id => current_user.id) %>

  -- Comments Below
  <% post.comments.each do |comment| %>
    <div class="">
      <br>
      <%= User.find(comment.user_id).email %>:

      <%= comment.body %>
      <br>
    <% end %>
    <br>
  <% end %>
</div>
<br>