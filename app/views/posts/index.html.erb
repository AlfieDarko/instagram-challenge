<h5>
  Winstagram Feed</h5>
<br>
<% @posts.each do |post| %>
  <div class="ui centered two cards">
    <div class="ui  card">
      <div class="content">
        <div class="right floated meta">14h</div>
        <img class="ui avatar image" src="/images/avatar/large/elliot.jpg">
        **insert username of post**
      </div>
      <div class="image">
        <%= image_tag post.image.url(:medium) %>
      </div>
      <div class=" content">

        <%= post.caption %>
      </div>

      <div class="content">
        <span class="right floated">
          <i class="heart outline like icon"></i>
          17 likes
        </span>
        <i class="comment icon"></i>
        <%= post.comments.count %><%= link_to " comments", post_comments_path(:post_id => post.id), :remote => true %>
      </div>
      <br>
      <div id="div_id<%= post.id %>"></div>

      <div class="extra content">
        <div class="ui large transparent left icon input">
          <%= render :partial => "new_comment", :remote => true, :post_id => post.id %>
        </div>
      </div>
    </div>

  </div>
  <br>
<% end %>
</div>
<br>